{
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build:demo": "ng build demo",
    "build:lib": "ng build ngx-notifier",
    "build": "npm run build:lib && npm run build:demo",
    "lint": "ng lint",
    "ng": "ng",
    "postbuild:lib": "node ./scripts/postbuild.js",
    "prerelease": "npm run build:lib",
    "release": "sh ./scripts/release.sh",
    "demo": "ng serve --open --port 4160",
    "test:lib": "ng test ngx-notifier --browsers ChromeHeadless --watch false",
    "test:demo": "ng test demo --browsers ChromeHeadless --watch false",
    "test": "npm run test:lib && npm run test:demo",
    "dev": "ng build ngx-notifier --watch --configuration development",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.3",
    "@angular-eslint/builder": "13.0.1",
    "@angular-eslint/eslint-plugin": "13.0.1",
    "@angular-eslint/eslint-plugin-template": "13.0.1",
    "@angular-eslint/schematics": "13.0.1",
    "@angular-eslint/template-parser": "13.0.1",
    "@angular/cli": "~13.1.3",
    "@angular/compiler-cli": "~13.1.0",
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "chalk": "^4.1.2",
    "eslint": "^8.6.0",
    "eslint-config-pegasus": "^3.2.0",
    "husky": "^7.0.4",
    "jasmine-core": "~3.10.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.7.0",
    "lint-staged": "^12.1.7",
    "ng-packagr": "^13.0.0",
    "tailwindcss": "^2.2.19",
    "typescript": "~4.5.1"
  }
